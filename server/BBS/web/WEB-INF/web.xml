<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>it.unitn.iotproject.bbs.servlets.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Activate</servlet-name>
        <servlet-class>it.unitn.iotproject.bbs.servlets.Activate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deactivate</servlet-name>
        <servlet-class>it.unitn.iotproject.bbs.servlets.Deactivate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovementDetected</servlet-name>
        <servlet-class>it.unitn.iotproject.bbs.servlets.MovementDetected</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>State</servlet-name>
        <servlet-class>it.unitn.iotproject.bbs.servlets.State</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Activate</servlet-name>
        <url-pattern>/Activate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Deactivate</servlet-name>
        <url-pattern>/Deactivate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovementDetected</servlet-name>
        <url-pattern>/MovementDetected</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>State</servlet-name>
        <url-pattern>/State</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
